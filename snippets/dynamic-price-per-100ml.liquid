{%- if product and product.variants.size > 0 -%}

  {%- assign items_count = 0 -%}

  {%- for v in product.variants -%}
    {%- assign title = v.title | strip -%}

    {%- assign volume_ml = title
      | replace: 'ml',''
      | replace: 'ML',''
      | strip
      | plus: 0
    -%}

    {%- if volume_ml > 0 and v.price > 0 -%}
      {%- assign items_count = items_count | plus: 1 -%}
    {%- endif -%}
  {%- endfor -%}

  {%- if items_count > 0 -%}
    <div class="price-per-100ml" dir="ltr">
      <span class="pp100-label">{{ 'price_per_100ml.label' | t }}</span>

      {%- assign index = 0 -%}
      {%- for v in product.variants -%}
        {%- assign title = v.title | strip -%}

        {%- assign volume_ml = title
          | replace: 'ml',''
          | replace: 'ML',''
          | strip
          | plus: 0
        -%}

        {%- if volume_ml > 0 and v.price > 0 -%}
          {%- assign per100 = v.price | times: 100 | divided_by: volume_ml -%}

          {%- if index > 0 -%}
            <span class="pp100-sep"> | </span>
          {%- endif -%}

          <span class="pp100-item">
            {{ volume_ml }} {{ 'price_per_100ml.ml' | t }} â€“ {{ per100 | money_without_trailing_zeros }}
          </span>

          {%- assign index = index | plus: 1 -%}
        {%- endif -%}
      {%- endfor -%}
    </div>

    <style>
      .price-per-100ml{
        margin-top: 4px;
        font-size: 13px;
        line-height: 1.4;
        text-align: left;
        direction: ltr;
        padding: 0;
        background: none;
        background-color: transparent;
        border: none;
      }
      .price-per-100ml .pp100-label{
        font-weight: 600;
        margin-right: 6px;
      }
      .price-per-100ml .pp100-item{
        white-space: nowrap;
      }
      .price-per-100ml .pp100-sep{
        margin: 0 6px;
        color: #777;
      }
      @media (max-width: 768px){
        .price-per-100ml{
          font-size: 12px;
          padding: 0;
          margin-top: 2px;
        }
      }
    </style>
  {%- endif -%}

{%- endif -%}
