
{%- assign gw_label = label | default: 'gift_wrap.label' | t -%}
{%- assign gw_key   = property_key | default: gw_label -%}
{%- assign gw_yes   = checked_value | default: 'gift_wrap.yes' | t -%}
{%- assign gw_no    = unchecked_value | default: 'gift_wrap.no' | t -%}

<div class="product__controls-group product__controls-group--checkbox product__block product__block--medium" dir="ltr">
  <!-- Send value even when unchecked -->
  <input type="hidden" name="properties[{{ gw_key }}]" value="{{ gw_no }}">

  <label class="gw-checkbox" aria-label="{{ gw_label }}">
    <input
      type="checkbox"
      class="gw-checkbox__input"
      name="properties[{{ gw_key }}]"
      value="{{ gw_yes }}"
    >
    <span class="gw-checkbox__label fs-body-100">
      {{ gw_label }}
    </span>
  </label>
</div>


<style>
/* Gift-wrap checkbox â€” LTR inline layout */
.gw-checkbox{
  display: inline-flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  user-select: none;
  color: inherit;
}

.gw-checkbox__input{
  inline-size: 18px;
  block-size: 18px;
  margin: 0;
  accent-color: currentColor;
}

.gw-checkbox__label{
  font: inherit;
  font-size: 0.9em;
}

.gw-checkbox:hover .gw-checkbox__label{
  opacity: 0.9;
}

.gw-checkbox__input:focus-visible{
  outline: 2px solid currentColor;
  outline-offset: 2px;
}

</style>
